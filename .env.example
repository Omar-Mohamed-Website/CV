# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Email Service (choose one)
# For Resend
RESEND_API_KEY=your_resend_api_key_here

# For SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your_verified_sender_email@example.com

# For Gmail via Nodemailer
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Contact Form Settings
CONTACT_TO_EMAIL=omarrmohamedd05@gmail.com
CONTACT_FROM_EMAIL=noreply@omar-mohamed.dev

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Vercel Deployment (for CI/CD)
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_org_id
VERCEL_PROJECT_ID=your_project_id

# Development
NODE_ENV=development

# Optional: Database (if you want to store contact submissions)
DATABASE_URL=postgresql://username:password@localhost:5432/cv_website

# Optional: Redis (for rate limiting)
REDIS_URL=redis://localhost:6379
